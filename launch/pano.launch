<launch>
  <arg name="namespace"/>
  <arg name="camera_number"/>
  <arg name="camera_ip"/>

  <node pkg="video_stream_opencv" type="video_stream" name="$(arg namespace)_pano_$(arg camera_number)" output="screen" ns="$(arg namespace)"> 
    <remap from="image_raw" to="sensors/pano_$(arg camera_number)/image_raw" />
    <param name="video_stream_provider" type="string" value="rtsp://unmanned:unmanned@$(arg camera_ip):554/cam1/mpeg4" />
    <param name="set_camera_fps" type="double" value="2.5" />
    <param name="buffer_queue_size" type="int" value="100" />
    <param name="fps" type="double" value="2.5" />
    <param name="frame_id" type="string" value="$(arg namespace)/pano_$(arg camera_number)" />
    <param name="camera_info_url" type="string" value="file:///$(find ben_hardware)/config/pano_$(arg camera_number).yaml" />
    <param name="flip_horizontal" type="bool" value="false" />
    <param name="flip_vertical" type="bool" value="false" />
    <param name="width" type="int" value="0" />
    <param name="height" type="int" value="0" />
  </node>

      
   <node pkg="nodelet" type="nodelet" name="thumbnail" ns="$(arg namespace)/sensors/pano_$(arg camera_number)" args="standalone image_proc/resize image:=image_raw _scale_width:=0.2 _scale_height:=0.2"/>
   <node pkg="nodelet" type="nodelet" name="rectify" ns="$(arg namespace)/sensors/pano_$(arg camera_number)" args="standalone image_proc/rectify image_mono:=image_raw"/>
</launch>
